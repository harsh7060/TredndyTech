<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/home_background"
    android:backgroundTint="@color/home_background">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:context=".MainActivity">

        <androidx.cardview.widget.CardView
            android:id="@+id/android_card"
            android:layout_width="160dp"
            android:layout_height="152dp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="200dp"
            android:backgroundTint="@color/bg"
            app:cardCornerRadius="20dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/android_logo" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/ai_card"
            android:layout_width="160dp"
            android:layout_height="152dp"
            android:layout_marginEnd="30dp"
            android:backgroundTint="#EFB8C8"
            app:cardCornerRadius="20dp"
            app:layout_constraintBottom_toBottomOf="@+id/android_card"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toEndOf="@+id/android_card"
            app:layout_constraintTop_toTopOf="@+id/android_card"
            app:layout_constraintVertical_bias="0.0">

            <ImageView
                android:id="@+id/imageView8"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                app:srcCompat="@drawable/ai_logo" />

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/ios_card"
            android:layout_width="160dp"
            android:layout_height="152dp"
            android:layout_marginTop="50dp"
            android:backgroundTint="#ffdab9"
            app:cardCornerRadius="20dp"
            app:layout_constraintEnd_toEndOf="@+id/android_card"
            app:layout_constraintStart_toStartOf="@+id/android_card"
            app:layout_constraintTop_toBottomOf="@+id/android_card">

            <ImageView
                android:id="@+id/imageView9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                app:srcCompat="@drawable/apple_ios" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/yt_card"
            android:layout_width="160dp"
            android:layout_height="152dp"
            android:backgroundTint="#f1faee"
            app:cardCornerRadius="20dp"
            app:layout_constraintBottom_toBottomOf="@+id/ios_card"
            app:layout_constraintEnd_toEndOf="@+id/ai_card"
            app:layout_constraintStart_toStartOf="@+id/ai_card"
            app:layout_constraintTop_toTopOf="@+id/ios_card">

            <ImageView
                android:id="@+id/imageView13"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/black"
                app:srcCompat="@drawable/youtube_icon_full_color_logo_wine" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/bitcoin_card"
            android:layout_width="160dp"
            android:layout_height="152dp"
            android:layout_marginTop="50dp"
            android:backgroundTint="@color/black"
            app:cardCornerRadius="20dp"
            app:layout_constraintEnd_toEndOf="@+id/ios_card"
            app:layout_constraintStart_toStartOf="@+id/ios_card"
            app:layout_constraintTop_toBottomOf="@+id/ios_card">

            <ImageView
                android:id="@+id/imageView12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                app:srcCompat="@drawable/bitcoin_btc_logo" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/linkdin_card"
            android:layout_width="160dp"
            android:layout_height="152dp"
            android:backgroundTint="@color/white"
            app:cardCornerRadius="20dp"
            app:layout_constraintBottom_toBottomOf="@+id/bitcoin_card"
            app:layout_constraintEnd_toEndOf="@+id/yt_card"
            app:layout_constraintStart_toStartOf="@+id/yt_card"
            app:layout_constraintTop_toTopOf="@+id/bitcoin_card">

            <ImageView
                android:id="@+id/imageView14"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:srcCompat="@drawable/icons8_linkedin_96" />

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/web3_card"
            android:layout_width="160dp"
            android:layout_height="152dp"
            android:layout_marginTop="50dp"
            android:background="#f1faee"
            android:backgroundTint="#f1faee"
            app:cardCornerRadius="20dp"
            app:layout_constraintStart_toStartOf="@+id/bitcoin_card"
            app:layout_constraintTop_toBottomOf="@+id/bitcoin_card">

            <ImageView
                android:id="@+id/imageView11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/web3_logo" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/twitter_card"
            android:layout_width="160dp"
            android:layout_height="152sp"
            android:layout_marginTop="50dp"
            android:background="#f1faee"
            android:backgroundTint="#f1faee"
            app:cardCornerRadius="20dp"
            app:layout_constraintEnd_toEndOf="@+id/linkdin_card"
            app:layout_constraintStart_toStartOf="@+id/linkdin_card"
            app:layout_constraintTop_toBottomOf="@+id/linkdin_card">

            <ImageView
                android:id="@+id/imageView15"
                android:layout_width="match_parent"
                android:layout_height="152dp"
                app:srcCompat="@drawable/icons8_twitter" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="200dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="50dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:background="#003049"
            android:backgroundTint="#003049"
            app:cardCornerRadius="20dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/web3_card">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/textView8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="15dp"
                    android:text="Contact Us"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/textView9"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text="Follow Us"
                    android:textColor="@color/white"
                    android:textSize="20dp"
                    app:layout_constraintStart_toStartOf="@+id/textView8"
                    app:layout_constraintTop_toBottomOf="@+id/textView8" />

                <androidx.cardview.widget.CardView
                    android:id="@+id/ig_card"
                    android:layout_width="48dp"
                    android:layout_height="50dp"
                    android:layout_marginStart="25dp"
                    android:layout_marginTop="20dp"
                    android:backgroundTint="@color/white"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView9">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:srcCompat="@drawable/icons8_instagram_circle" />
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/x_card"
                    android:layout_width="48dp"
                    android:layout_height="50dp"
                    android:layout_marginStart="20dp"
                    android:backgroundTint="@color/white"
                    app:layout_constraintStart_toEndOf="@+id/ig_card"
                    app:layout_constraintTop_toTopOf="@+id/ig_card">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:srcCompat="@drawable/icons8_twitter" />
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/github_card"
                    android:layout_width="48dp"
                    android:layout_height="50dp"
                    android:layout_marginStart="20dp"
                    android:backgroundTint="@color/white"
                    app:layout_constraintStart_toEndOf="@+id/x_card"
                    app:layout_constraintTop_toTopOf="@+id/x_card">

                    <ImageView
                        android:id="@+id/imageView23"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:srcCompat="@drawable/icons8_github" />
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/lin_card"
                    android:layout_width="48dp"
                    android:layout_height="50dp"
                    android:layout_marginStart="20dp"
                    android:backgroundTint="@color/white"
                    app:layout_constraintStart_toEndOf="@+id/github_card"
                    app:layout_constraintTop_toTopOf="@+id/github_card">

                    <ImageView
                        android:id="@+id/imageView25"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:srcCompat="@drawable/icons8_linkedin" />
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/call_card"
                    android:layout_width="23dp"
                    android:layout_height="24dp"
                    android:layout_marginStart="15dp"
                    android:backgroundTint="@color/white"
                    app:layout_constraintBottom_toBottomOf="@+id/textView8"
                    app:layout_constraintStart_toEndOf="@+id/textView8"
                    app:layout_constraintTop_toTopOf="@+id/textView8">

                    <ImageView
                        android:id="@+id/imageView27"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        app:srcCompat="@drawable/icons8_phone" />
                </androidx.cardview.widget.CardView>

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="-15dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="40dp"
            android:backgroundTint="#003049"
            app:cardCornerRadius="20dp"
            app:layout_constraintBottom_toTopOf="@+id/android_card"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/imageView4"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="15dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/home_logo" />

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto_slab_bold"
                    android:text="Trendy Tech"
                    android:textColor="@color/heading_cl"
                    android:textSize="30dp"
                    app:layout_constraintBottom_toBottomOf="@+id/imageView4"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/imageView4"
                    app:layout_constraintTop_toTopOf="@+id/imageView4" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>


    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>